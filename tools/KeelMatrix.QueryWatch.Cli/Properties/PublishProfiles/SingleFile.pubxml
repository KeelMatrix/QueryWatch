<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <!-- Framework-dependent single file for portability -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>

    <!-- Only trim when self-contained (framework-dependent + trimming => NETSDK1102) -->
    <PublishTrimmed Condition="'$(SelfContained)'=='true'">true</PublishTrimmed>
    <TrimMode Condition="'$(SelfContained)'=='true'">partial</TrimMode>

    <InvariantGlobalization>true</InvariantGlobalization>
    <DebugType>embedded</DebugType>

    <!-- Compression only allowed when self-contained -->
    <EnableCompressionInSingleFile Condition="'$(SelfContained)'=='true'">true</EnableCompressionInSingleFile>
  </PropertyGroup>
</Project>
